@model Orion.API.Data.Entities.T_TipoDocumento

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Tipo de Documento</h4>
<hr />
<div class="row">
    <div class="col-md-12">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DescripcionDocumento" class="control-label"></label>
                <input asp-for="DescripcionDocumento" class="form-control" />
                <span asp-validation-for="DescripcionDocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abreviatura" class="control-label"></label>
                <input asp-for="Abreviatura" class="form-control" />
                <span asp-validation-for="Abreviatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
