
@model Orion.API.Models.CitaViewModel

@{
    ViewData["Title"] = "Create";
}


<h4>T_Cita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
      
        <form asp-action="AddCita" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PacienteTypeId" />
            <input type="hidden" asp-for="TypeEstadoCita" />

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HoraInicio" class="control-label"></label>
                <input asp-for="HoraInicio" class="form-control" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HoraFinal" class="control-label"></label>
                <input asp-for="HoraFinal" class="form-control" />
                <span asp-validation-for="HoraFinal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MedicoTypeId" class="control-label"></label>
                <select asp-for="MedicoTypeId" asp-items="Model.DescripcionMedico" class="form-control"></select>
                <span asp-validation-for="MedicoTypeId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Observacion" class="control-label"></label>
                <textarea asp-for="Observacion" class="form-control"></textarea>
                <span asp-validation-for="Observacion" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="IndexPaciente" asp-route-id="@Model.PacienteTypeId" class="btn btn-success">Regresar</a>
            </div>
        </form>
</div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
