@model Orion.API.Data.Entities.T_Usuario

@{
    ViewData["Title"] = "IndexPaciente";
}


<h3>Paciente</h3>
<hr />

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FullName)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Direccion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Direccion)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Telefono)
            </dd>
        </dl>
    </div>
    <div class="col-md-4">

        <a asp-action="AddCita" asp-route-id="@Model.Id" class="btn btn-primary">Citas</a>
        <a asp-action="Index" class="btn btn-success">Regresar</a>

    </div>



    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">Historial Citas</h4>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="MyTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.T_Citas.FirstOrDefault().Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.T_Citas.FirstOrDefault().Id_Medico.NombreMedico)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.T_Citas.FirstOrDefault().Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.T_Citas.FirstOrDefault().DateLocal)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.T_Citas)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id_Medico.NombreMedico)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateLocal)
                                    </td>
                                                                  
                                    
                                    <td>
                                        <a asp-action="EditVehicle" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                        <a asp-action="DetailsVehicle" asp-route-id="@item.Id" class="btn btn-info">Contratos<i class="glyphicon glyphicon-align-justify"></i></a>
                                        <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog">Borrar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>





</div>



