@model Orion.API.Models.UserViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Crear</h2>

<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DocumentTypeId" class="control-label"></label>
                        <select asp-for="DocumentTypeId" asp-items="Model.DescripcionDocumento" class="form-control"></select>
                        <span asp-validation-for="DocumentTypeId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Document" class="control-label"></label>
                        <input asp-for="Document" class="form-control" />
                        <span asp-validation-for="Document" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="GeneroTypeId" class="control-label"></label>
                        <select asp-for="GeneroTypeId" asp-items="Model.DescripcionGenero" class="form-control"></select>
                        <span asp-validation-for="GeneroTypeId" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EPSTypeId" class="control-label"></label>
                        <select asp-for="EPSTypeId" asp-items="Model.DescripcionEPS" class="form-control"></select>
                        <span asp-validation-for="EPSTypeId" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TipoVinculationTypeId" class="control-label"></label>
                        <select asp-for="TipoVinculationTypeId" asp-items="Model.DescripcionTipoVinculacion" class="form-control"></select>
                        <span asp-validation-for="TipoVinculationTypeId" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TratamientoTypeId" class="control-label"></label>
                        <select asp-for="TratamientoTypeId" asp-items="Model.DescripcionTratamiento" class="form-control"></select>
                        <span asp-validation-for="TratamientoTypeId" class="text-danger"></span>
                    </div>

                </div>


                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FuenteContactoTypeId" class="control-label"></label>
                        <select asp-for="FuenteContactoTypeId" asp-items="Model.DescripcionFuenteContacto" class="form-control"></select>
                        <span asp-validation-for="FuenteContactoTypeId" class="text-danger"></span>
                    </div>

                </div>

            </div>


            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}